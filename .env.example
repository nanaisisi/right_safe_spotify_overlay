# Spotify API # VLC Media Player integration (optional)
# Set VLC_ENABLED=true to enable VLC monitoring instead of Spotify
VLC_ENABLED=false
VLC_HOST=localhost
VLC_PORT=8080
VLC_PASSWORD=vlc
VLC_EXE_PATH=C:\Program Files\VideoLAN\VLC\vlc.exe
VLC_AUTO_START=falsetials
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Server configuration
PORT=8081
REDIRECT_URI=http://127.0.0.1:8081/callback

# Polling interval for checking currently playing song (in milliseconds)
# Note: The app now uses adaptive polling (10s when active, 60s when idle)
# This setting is kept for backward compatibility but may not be used
POLLING_INTERVAL=10000

# VLC Media Player integration (optional)
# Set VLC_ENABLED=true to enable VLC monitoring instead of Spotify
VLC_ENABLED=true
VLC_HOST=localhost
VLC_PORT=8080
VLC_PASSWORD=vlc
